<Window x:Class="Zadanie10202.ДобавлениеРедактирование_заявки"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie10202"
        mc:Ignorable="d"
        Title="ДобавлениеРедактирование_заявки" Height="680" Width="900" FontFamily="Bahnschrift Light SemiCondensed" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Margin="10">Тип партнера</TextBlock>
            <ComboBox x:Name="typeOfPartner" Width="200" Height="20" HorizontalAlignment="Left"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Margin="210,0,0,0">
            <TextBlock Margin="10">Наименование</TextBlock>
            <TextBox x:Name="namePartner" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Margin="420,0,0,0">
            <TextBlock Margin="10">ФИО директора</TextBlock>
            <TextBox x:Name="nameDirector" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Left">
            <TextBlock Margin="10">Юридический адрес</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">Индекс</TextBlock>
                <TextBox x:Name="indexPart"  Width="100" Height="20" HorizontalAlignment="Left"></TextBox>
                <TextBlock Margin="10,0,10,0" VerticalAlignment="Center">Область</TextBlock>
                <TextBox x:Name="oblastPart" Width="100" Height="20" HorizontalAlignment="Left"></TextBox>
                <TextBlock Margin="10,0,10,0" VerticalAlignment="Center">Город</TextBlock>
                <TextBox x:Name="cityPart" Width="100" Height="20" HorizontalAlignment="Left"></TextBox>
                <TextBlock Margin="10,0,10,0" VerticalAlignment="Center">Улица</TextBlock>
                <TextBox x:Name="streetPart" Width="100" Height="20" HorizontalAlignment="Left"></TextBox>
                <TextBlock Margin="10,0,10,0" VerticalAlignment="Center">Дом</TextBlock>
                <TextBox x:Name="domPart" Width="100" Height="20" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Left">
            <TextBlock Margin="10">Рейтинг</TextBlock>
            <TextBox x:Name="reitPart" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="210,0,0,0">
            <TextBlock Margin="10">Телефон</TextBlock>
            <TextBox x:Name="telPart" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="420,0,0,0">
            <TextBlock Margin="10">email компании</TextBlock>
            <TextBox x:Name="emailPart" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="640,0,0,0">
            <TextBlock Margin="10">ИНН компании</TextBlock>
            <TextBox x:Name="innPart" Width="200" Height="20" HorizontalAlignment="Left"></TextBox>
        </StackPanel>

        <GroupBox x:Name="dobProd" Grid.Row="3" Header="Добавление продукции" Margin="0,10,0,0" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Margin="3,0,0,0" Grid.Row="0">
                    <TextBlock x:Name="infoText"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <ComboBox x:Name="productsComboBox" Width="400" Margin="5"/>
                    <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBox x:Name="quantityTextBox"  Width="100" TextAlignment="Center" VerticalAlignment="Center" Text="1" Margin="5"/>
                    <Button x:Name="addProduct" Content="Добавить" Margin="10,0,0,0" Background="#546F94" Foreground="White" Height="30" Width="80" Click="addProduct_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="prodVZaivki" Grid.Row="4" Header="Продукция в заявке" Margin="0,10,0,0" Visibility="Visible">
            <StackPanel>
                <DataGrid x:Name="selectedProductsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" Height="Auto" Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Продукция" Binding="{Binding Продукция.Наименование_продукции}" Width="*"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="100"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Продукция.Минимальная_стоимость_для_партнера}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock x:Name="itogoSum" Margin="0,10,0,0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right">ИТОГО: 00.00</TextBlock>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="5" Margin="0,10,0,0" Orientation="Horizontal">
            <Button x:Name="saveRequest" Height="40" Width="128" HorizontalAlignment="Left"
                    Background="#546F94" Foreground="White" 
                    Click="saveRequest_Click"
                    >Сохранить</Button>
            <Button x:Name="cancelRequest" Height="40" Width="128" HorizontalAlignment="Left" 
                    Margin="10,0,0,0" Background="#546F94" Foreground="White"
                    Click="cancelRequest_Click"
                    >Отмена</Button>
        </StackPanel>
        
    </Grid>
</Window>
