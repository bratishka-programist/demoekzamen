<Window x:Class="Zadanie10202.ПредложениеПродукции"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предложение продукции партнеру" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Bahnschrift Light SemiCondensed">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Предложение продукции" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Информация о партнере -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                Background="#F5F5F5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="partnerInfoText" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="partnerDetailsText" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Предлагаемая продукция -->
        <DataGrid Grid.Row="2" x:Name="productsDataGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование продукции" 
                                  Binding="{Binding Наименование}" Width="*"/>
                <DataGridTextColumn Header="Артикул" 
                                  Binding="{Binding Артикул}" Width="120"/>
                <DataGridTextColumn Header="Минимальная стоимость" 
                                  Binding="{Binding МинимальнаяСтоимость, StringFormat={}{0:N2} руб.}" Width="130"/>
                <DataGridTextColumn Header="Количество в заявках" 
                                  Binding="{Binding КоличествоВЗаявках}" Width="120"/>
                <DataGridTextColumn Header="Общая стоимость" 
                                  Binding="{Binding ОбщаяСтоимость, StringFormat={}{0:N2} руб.}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Итоговая сумма -->
        <TextBlock Grid.Row="3" x:Name="totalSumText" FontSize="14" 
                   FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Расчет материалов -->
        <GroupBox Grid.Row="4" Header="Расчет необходимых материалов" 
                  Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Параметры расчета -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Выберите продукцию для расчета:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="calculationProductComboBox" 
                              DisplayMemberPath="Наименование"
                              SelectedValuePath="НомерПродукции"
                              Margin="0,0,0,5" SelectionChanged="calculationProductComboBox_SelectionChanged"/>

                    <TextBlock Text="Требуемое количество:" Margin="0,10,0,5"/>
                    <TextBox x:Name="requiredQuantityTextBox" Text="" 
                             Margin="0,0,0,5"/>

                    <Button x:Name="calculateMaterialButton" 
                            Content="Рассчитать материалы" 
                            Click="CalculateMaterialButton_Click" 
                            Width="150" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Разделитель -->
                <Rectangle Grid.Column="1" Width="1" Fill="LightGray" 
                           VerticalAlignment="Stretch" Margin="10,0"/>

                <!-- Результат расчета -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Результат расчета:" FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="calculationResultText" 
                               TextWrapping="Wrap" Height="60"
                               VerticalAlignment="Top"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Вернуться к заявкам" Click="BackButton_Click" 
                    Margin="5" Padding="10,5" Background="#546F94" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>